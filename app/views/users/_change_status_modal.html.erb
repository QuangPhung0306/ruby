<div class="modal fade modal_reg modal_ct" id="modal_ct" tabindex="-1" 
  role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="text-center">
          <h3><%= t ".change_status_confirm_message" %></h3>
        </div>
        <div class="text-center mt-4">
          <%= link_to t(".yes_button"), "javascript:void(0)",
            class: "btn-ok btn_primary btn-lg",
            data: {dismiss: "modal"}, remote: true %>
          <%= link_to t(".no_button"), "", class: "btn_secondary btn-lg",
            data: {dismiss: "modal"} %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="box_gr_tlt">
  <h2 class="box_gr_hd"><%= t(".measurements") %></h2>
  <h2 class="box_gr_hd"><%= t(".units_of_measurement") %></h2>
  <h2 class="box_gr_hd"><%= t(".dimensioning") %></h2>
</div>
<div class="box_gr_item">
  <div class="gr_item">
    <span><%= t(".temperature") %></span>
  </div>
  <div class="gr_item measure">
    <span><sup>o</sup>C</span>
  </div>
  <div class="gr_item">
    <%= text_field_tag :drc_temperature, "#{project ? project.room_calculation_input.drc_temperature.round(2) : 20}", id: "drc-temperature", autocomplete: "off" %>
  </div>
</div>
<div class="box_gr_item">
  <div class="gr_item">
    <span><%= t(".relative_humidity") %></span>
  </div>
  <div class="gr_item measure">
    <span>%RH</span>
  </div>
  <div class="gr_item">
    <%= text_field_tag :drc_relative_humidity, "#{project ? project.room_calculation_input.drc_relative_humidity.round(2) : 50}", id: "drc-relative-humidity", autocomplete: "off" %>
  </div>
</div>
<div class="box_gr_item">
  <div class="gr_item">
    <span><%= t ".height_above_sea_level" %></span>
  </div>
  <div class="gr_item">
    <span>m</span>
  </div>
  <div class="gr_item">
    <%= text_field_tag :drc_height_above_sea_level,  "#{project ? project.room_calculation_input.height_above_sea_level : -6.2}", autocomplete: "off", "data-id": "height_above_sea_level" %>
  </div>
</div>
<div class="box_gr_item">
  <div class="gr_item">
    <span><%= t(".atmospheric_pressure") %></span>
  </div>
  <div class="gr_item measure">
    <span>mbar</span>
  </div>
  <div class="gr_item">
    <%= text_field_tag :drc_atmospheric_pressure, "#{project ? project.room_calculation_input.drc_atmospheric_pressure.round(2) : 1014}", id: "drc-atmospheric-pressure", autocomplete: "off", readonly: true, "data-id": "base_atmospheric_pressure" %>
  </div>
</div>
<div class="box_gr_item">
  <div class="gr_item">
    <span><%= t(".moisture_content") %></span>
  </div>
  <div class="gr_item measure">
    <span>g/kg</span>
  </div>
  <div class="gr_item">
    <%= text_field_tag :drc_moisture_content, "#{project ? project.room_calculation_input.drc_moisture_content.round(2) : 7.27}", id: "drc", readonly: true %>
  </div>
</div>
<div class="box_gr_item">
  <div class="text-center w-100">
    <%= select_tag :d_room_has_walls_towards_outdoor, options_for_select([[t(".dehumidified_room_1"), 1], [t(".dehumidified_room_2"), 2]]),
      class: "custom-select", id: "dehumidified-room" %>
  </div>
</div>
